<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="idFactureService" class="org.maCompagnie.facturation.service.FactureServicePrefixe">
        <property name="factureRepository" ref="idFactureRepository"/>
    </bean>

    <bean class="org.maCompagnie.facturation.controller.FactureControllerWeb">
        <property name="factureService" ref="idFactureService"/>
        <!--Spring invoque le setter de la propriété factureService-->
    </bean>

    <bean id="idFactureRepository" class="org.maCompagnie.facturation.repository.FactureRepositoryDatabase"/>

</beans>